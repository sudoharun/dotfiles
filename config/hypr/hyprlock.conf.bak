general {
  hide_cursor = true
  grace = 3
}

background {
    monitor =
    path = /home/harun/Pictures/Wallpaper/Cool/nice_cars_in_the_sky.png
    color = rgba(121212aa)
    blur_passes = 0
    blur_size = 8
    noise = 0.0
    contrast = 1.0
    brightness = 1.0
    vibrancy = 0.25
    vibrancy_darkness = 0.25
}

label {
    monitor =
    text = cmd[update:1000] echo "$(date +"%H:%M")"
    color = rgb(f5f5f5)
    shadow_passes = 2
    shadow_size = 6
    shadow_color = rgb(000000)
    font_size = 128
    font_family = IBM Plex Sans
    position = 0, 0
    halign = left
    valign = bottom
}

label {
    monitor =
    text = cmd[update:10000] echo "$(date '+%A %d %B %Y')"
    color = rgb(f5f5f5)
    shadow_passes = 2
    shadow_size = 6
    shadow_color = rgb(000000)
    font_size = 16
    font_family = IBM Plex Sans
    position = 0, 0
    halign = left
    valign = bottom
}

input-field {
    monitor =
    size = 225, 40
    outline_thickness = 2
    dots_size = 0.25
    dots_spacing = 0.25
    dots_center = true
    outer_color = rgba(50505025)
    inner_color = rgb(f5f5f5)
    font_color = rgb(363636)
    check_color = rgb(757575)
    fade_on_empty = false
    placeholder_text = <b><i><span foreground="##36363650">Enter password here</span></i></b>
    hide_input = false
    rounding = 4
    position = 0, 0
    halign = left
    valign = bottom
}

